{
  "name": "github_nice_code_collector",
  "version": "0.0.1",
  "description": "On GitHub, collect and document the code that the reviewers wrote as nice.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/okosheep/github_nice_code_collector",
  "author": "Hiroomi Okoshi",
  "license": "MIT",
  "private": false,
  "keywords": [
    "github"
  ],
  "files": [
    "dist"
  ],
  "bin": {
    "gnccr": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rf ./dist",
    "format": "prettier --write src/**/*.ts src/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "local-install": "yarn clean && yarn build && yarn pack && yarn add -D ./*.tgz",
    "local-reinstall": "yarn local-uninstall && yarn local-install",
    "local-uninstall": "yarn remove github_nice_code_collector && yarn cache clean && rm *.tgz",
    "local-run": "node node_modules/.bin/gnccr",
    "prepublishOnly": "tsc"
  },
  "bugs": {
    "url": "https://github.com/okosheep/github_nice_code_collector/issues"
  },
  "dependencies": {
    "@octokit/request": "^5.6.2",
    "@octokit/rest": "^18.12.0",
    "comment-json": "^4.1.1",
    "ejs": "^3.1.6"
  },
  "devDependencies": {
    "@octokit/types": "^6.34.0",
    "@types/ejs": "^3.1.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "semi": false
  },
  "gnccr": {
    "owner": "okosheep",
    "repo": "github_nice_code_collector",
    "keywords": [
      "üëç",
      ":+1:"
    ],
    "since": "2021-01-01T00:00:00.000Z",
    "destination": "./dist/gnccr.md",
    "template": [
      "# Default Template",
      "",
      "This is template.",
      "",
      "<% reviews.forEach((value, key) => { %>",
      "## Body",
      "",
      "<%= value.body %>",
      "",
      "## Diff",
      "",
      "```",
      "<%= value.diff_hunk %>",
      "```",
      "",
      "## Link",
      "",
      "- [%<= value.path %>](<%= value.html_url %>)",
      "<% }) %>"
    ]
  }
}
